<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |u_s| %>
      <tr>
        <td><%= u_s.stock.name %></td>
        <td><%= u_s.stock.ticker %></td>
        <td><%= u_s.stock.price %></td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to 'Delete', user_stock_path(u_s), 
                method: :delete, data: {confirm: "Are you sure?"},
                class: 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>  
</table>
